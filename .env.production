# Production Environment Variables Template
# These variables are set in docker-compose.prod.yml
# Modify docker-compose.prod.yml to change these values

NODE_ENV=production
SQUID_HOST=127.0.0.1
SQUID_PORT=3128

# Log file paths inside container (mounted from host via volumes)
ACCESS_LOG=/app/logs/access.log
CACHE_LOG=/app/logs/cache.log

# Redis connection (use container name in Docker)
REDIS_HOST=redis-bunsqstat
REDIS_PORT=6379
REDIS_PASSWORD=123

# Host paths for volume mounting (edit in docker-compose.prod.yml):
# Host: /var/log/squid/access.log -> Container: /app/logs/access.log
# Host: /var/log/squid/cache.log -> Container: /app/logs/cache.log
