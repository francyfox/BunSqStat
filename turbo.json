{
	"$schema": "https://turborepo.com/schema.json",
	"globalDependencies": ["package.json"],
	"globalEnv": ["NODE_ENV"],
	"remoteCache": {
		"enabled": true,
		"signature": true
	},
	"tasks": {
		"build": {
			"dependsOn": ["^build"],
			"outputs": ["dist/**"],
			"env": ["NODE_ENV"],
			"inputs": ["src/**", "../../apps/server/src/export.ts"]
		},
		"check-types": {
			"dependsOn": ["^check-types"]
		},
		"dev": {
			"persistent": true,
			"cache": false
		}
	}
}
