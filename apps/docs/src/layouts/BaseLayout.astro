---
import Rainbow from "../components/Rainbow.astro";
import "@fontsource-variable/victor-mono";

interface Props {
	title: string;
	description: string;
}
const { title, description } = Astro.props;
---
<html lang="en" class="h-full">
<head>
    <meta charset="UTF-8">
    <meta name="description" content={description}>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>{title}</title>
    <link rel="sitemap" href="/sitemap-index.xml">
    <link rel="robots" href=/robots.txt">
    <link rel="icon" href="/favicon.svg" />
    <noscript>
        <!-- Google Tag Manager (noscript) -->
        <noscript><iframe src="https://www.googletagmanager.com/ns.html?id=GTM-PWXSZLDZ"
                          height="0" width="0" style="display:none;visibility:hidden"></iframe></noscript>
        <!-- End Google Tag Manager (noscript) -->

    </noscript>
</head>
<body class="h-full">
    <Rainbow />
    <section class="h-full relative z-10">
        <div class="h-full p-sm">
            <slot />
        </div>
    </section>
</body>
<script>
    (function(w,d,s,l,i){w[l]=w[l]||[];w[l].push({'gtm.start':
          new Date().getTime(),event:'gtm.js'});var f=d.getElementsByTagName(s)[0],
      j=d.createElement(s),dl=l!='dataLayer'?'&l='+l:'';j.async=true;j.src=
      'https://www.googletagmanager.com/gtm.js?id='+i+dl;f.parentNode.insertBefore(j,f);
    })(window,document,'script','dataLayer','GTM-PWXSZLDZ');
</script>
</html>

<style lang="postcss" is:global>
@import "@unocss/reset/tailwind.css";

body {
    font-family: 'Victor Mono Variable', monospace;

    @apply bg-[#161C2E];
}
</style>